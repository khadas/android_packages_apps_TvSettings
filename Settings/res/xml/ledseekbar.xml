<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical" >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/logoled_control"
        android:focusable="false"
        android:textSize="@dimen/sound_seekbar_title"
        android:layout_marginTop="@dimen/sound_seekbar_title_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/sound_seekbar_item_marginLeft"
        />
    <TextView
        android:id="@+id/text_logoled"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/led_brightness"
        android:focusable="false"
        android:textSize="@dimen/sound_seekbar_item"
        android:layout_marginTop="@dimen/sound_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/sound_seekbar_item_marginLeft"
        />
    <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/sound_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
	android:orientation="horizontal">
    <ImageView android:id="@+id/logoled_icon"
	android:layout_height="30dp"
	android:layout_width="30dp"
	android:scaleType="fitCenter"
	android:src="@drawable/ic_settings_led"/>
    <SeekBar
	android:id="@+id/seekbar_logoled"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="5dp"
	android:layout_marginBottom="5dp"/>
    </LinearLayout>
</LinearLayout>
