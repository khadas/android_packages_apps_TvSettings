<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical" >

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/sound_settings"
        android:focusable="false"
        android:textSize="@dimen/sound_seekbar_title"
        android:layout_marginTop="@dimen/sound_seekbar_title_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/sound_seekbar_item_marginLeft"
        />
    <TextView
        android:id="@+id/text_media"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/media_volume"
        android:focusable="false"
        android:textSize="@dimen/sound_seekbar_item"
        android:layout_marginTop="@dimen/sound_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/sound_seekbar_item_marginLeft"
        />
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="@dimen/sound_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
	    android:orientation="horizontal">
	            
		<ImageView android:id="@+id/media_icon"
   	   		android:layout_height="30dp"
   	   		android:layout_width="30dp"
   	   		android:scaleType="fitCenter"
   	   		android:src="@drawable/ic_volume_up"/>

		<SeekBar
       		android:id="@+id/seekbar_media"
       		android:layout_width="match_parent"
       		android:layout_height="wrap_content" 
       		android:layout_marginTop="5dp"
       		android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_alarm"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/alarm_volume"
        android:focusable="false"
        android:layout_marginTop="@dimen/sound_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/sound_seekbar_item_marginLeft"
        />
   <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sound_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
        android:orientation="horizontal">

       <ImageView android:id="@+id/alarm_icon"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_volume_alarm"/>

       <SeekBar
            android:id="@+id/seekbar_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/text_notification"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/notification_volume"
        android:focusable="false"
        android:layout_marginTop="@dimen/sound_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
        android:layout_marginLeft="@dimen/sound_seekbar_item_marginLeft"
        />
    <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="@dimen/sound_seekbar_item_marginTop"
        android:layout_marginBottom="@dimen/sound_seekbar_item_marginBottom"
	android:orientation="horizontal">

        <ImageView android:id="@+id/notification_icon"
           android:layout_height="30dp"
           android:layout_width="30dp"
           android:scaleType="fitCenter"
           android:src="@drawable/ic_notifications"/>

        <SeekBar
           android:id="@+id/seekbar_notification"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:layout_marginBottom="5dp"/>
    </LinearLayout>
</LinearLayout>
