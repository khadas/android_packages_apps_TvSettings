<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_svep_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_svep_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="@string/ai_svep_mode"
            android:textSize="15sp"
            android:textColor="@color/tv_white" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >
            <CheckBox
                android:id="@+id/checkbox_svep_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_svep_global_ui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@id/layout_svep_mode">
        <TextView
            android:id="@+id/textview_svep_global_ui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="@string/ai_svep_global_ui"
            android:textSize="15sp"
            android:textColor="@color/tv_white" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >
            <CheckBox
                android:id="@+id/checkbox_svep_global_ui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_svep_contrast_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@id/layout_svep_global_ui">
        <TextView
            android:id="@+id/textview_svep_contrast_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="@string/ai_svep_contrast_mode"
            android:textSize="15sp"
            android:textColor="@color/tv_white" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >
            <CheckBox
                android:id="@+id/checkbox_svep_contrast_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_svep_contrast_ratio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginBottom="0dp"
        android:text="@string/ai_svep_contrast_ratio"
        android:textSize="15sp"
        android:textColor="@color/tv_white"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/layout_svep_contrast_mode" />

    <LinearLayout
        android:id="@+id/layout_svep_contrast_ratio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@id/textview_svep_contrast_ratio">
        <SeekBar
            android:id="@+id/seekbar_svep_contrast_ratio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:max="100"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/textview_svep_contrast_ratio_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="7"
            android:text="50"
            android:textSize="15sp"
            android:textColor="@color/tv_white"
            android:layout_alignParentRight="true" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_svep_enhance_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_marginBottom="0dp"
        android:text="@string/ai_svep_enhance_rate"
        android:textSize="15sp"
        android:textColor="@color/tv_white"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/layout_svep_contrast_ratio" />

    <LinearLayout
        android:id="@+id/layout_svep_enhance_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_below="@id/textview_svep_enhance_rate">
        <SeekBar
            android:id="@+id/seekbar_svep_enhance_rate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:max="10"
            android:layout_alignParentLeft="true" />
        <TextView
            android:id="@+id/textview_svep_enhance_rate_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="7"
            android:text="5"
            android:textSize="15sp"
            android:textColor="@color/tv_white"
            android:layout_alignParentRight="true" />
    </LinearLayout>
</RelativeLayout>